package mySwitch;

import java.util.Scanner;

public class ExampleSwitch1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int x = 20;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter the number of x:");
		x=sc.nextInt();
		
		switch (x) {
		case 10:
			System.out.println("x is 10");
			break; //; not :
			
		case 20:
			System.out.println("x is 20");
			break; // to break from the other cases 
			
		case 30:
			System.out.println("x is 30");
			break;
			
		default:
			System.out.println("x is not 10 or 20 or 30"); //no need to put break
		}
		
		sc.close();
		
	}

}
